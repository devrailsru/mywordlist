
<div class="card devise-form">

  <div class="card-header ">
    <h2>Изменить данные аккаунта</h2>
  </div>

    <div class="card-body">

      <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
        <%= f.error_notification %>

        <div class="form-inputs">
          <%= f.input :email, label: "Электронная почта", required: true, autofocus: true, class: "form-control" %>

          <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
            <p>Currently waiting confirmation for: <%= resource.unconfirmed_email %></p>
          <% end %>

          <%= f.input :password, autocomplete: "off", label: "Новый пароль", required: false, hint: "оставьте пустым, если не хотите менять пароль", class: "form-control" %>
          <%= f.input :password_confirmation, label: "Подтверждение пароля", required: false, class: "form-control" %>
          <%= f.input :current_password, label: "Текущий пароль", required: true,  hint: "текущий пароль для подтверждения изменений", class: "form-control" %>
        </div>

        <div class="form-actions">
          <%= f.button :submit, "Обновить", class: "btn btn-primary" %>
        </div>
      <% end %>

      <br>

      <h3>Удаление аккаунта</h3>

         <%= link_to "Удалить аккаунт", registration_path(resource_name), data: { confirm: "Вы уверены?" }, method: :delete, class: "btn btn-primary" %></p>

      <%= link_to "Назад", :back %>

  </div>
</div>
