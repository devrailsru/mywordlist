<div class="card devise-form">

  <div class="card-header ">
    <h2>Измените пароль</h2>
  </div>

    <div class="card-body">

      <%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
        <%= f.error_notification %>

        <%= f.input :reset_password_token, as: :hidden %>
        <%= f.full_error :reset_password_token %>

        <div class="form-inputs">
          <%= f.input :password, label: "Новый пароль", required: true, autofocus: true, hint: ("Минимум #{@minimum_password_length} символов" if @minimum_password_length), class: "form-control" %>
          <%= f.input :password_confirmation, label: "Подтвердить  ", required: true, class: "form-control" %>
        </div>

        <div class="form-actions">
          <%= f.button :submit, "Изменить мой пароль", class: "btn btn-primary" %>
        </div>
      <% end %>

    <%= render "devise/shared/links" %>

  </div>
</div>
