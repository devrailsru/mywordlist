<div class="card devise-form">

  <div class="card-header ">
    <h2>Войти</h2>
  </div>

    <div class="card-body">

    <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="form-group">
        <%= f.input :email, label: 'Электронная почта:', placeholder: 'user@domain.com', required: true, autofocus: true, class: "form-control" %>
        <%= f.input :password, label: 'Пароль:', placeholder: '******', required: true, class: "form-control" %>
        <%= f.input :remember_me, label: 'Запомнить меня', as: :boolean if devise_mapping.rememberable? %>
      </div>

      <div class="form-actions">
        <%= f.button :submit, "Войти", class: "btn btn-primary" %>
      </div>
    <% end %>

    <%= render "devise/shared/links" %>

  </div>
</div>
